/* 
Easy - https://leetcode.com/problems/reverse-integer
Complexity is O(n)
*/

class Solution {
    public int reverse(int x) {
        
        boolean neg = false;
        
        if(x < 0) {
        neg = true;
        x = Math.abs(x); 
        }
        StringBuilder integer = new StringBuilder(Integer.toString(x));
        StringBuilder result = new StringBuilder();
    
       for(int y = integer.length()-1; y >= 0; y--) {
            result.append(integer.charAt(y));
        }
        
        int res;
        if(result.length() != 0)
             res = Integer.valueOf(result.toString());
        else res = 0;
        
        if(neg) res *= -1;
            
            return res;
    }
}
